#!/usr/bin/env php

<?php

$packagist_autoload = 'vendor/autoload.php';
$source_autoload = __DIR__ . '/../vendor/autoload.php';

if (\file_exists($packagist_autoload)) {
    require_once $packagist_autoload;
} else {
    require_once $source_autoload;
}

use PDG\Component\Console;

$json = new \PDG\Component\JsonReader('phpdocgen.json');
$json->read();
$console = new Console($json);
$console->run($argv);
